<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:imeActionId">6</item>
        <item name="android:divider">@color/colorDivider</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>

    </style>

    <style name="Tag">
        <item name="android:paddingLeft">@dimen/tag_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/tag_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/tag_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/tag_vertical_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/background</item>
        <item name="android:onClick">onClick</item>
        <item name="android:layout_marginBottom">@dimen/tag_vertical_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="lineStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="Toolbar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="titleTextAppearance">@style/Toolbar.Title</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>


    </style>

    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="Toolbar">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>


    <style name="BasicTextView">
        <item name="android:onClick">onClick</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="LeftTextView">
        <item name="android:onClick">onClick</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>